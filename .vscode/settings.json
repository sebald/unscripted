{
  "editor.formatOnSave": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "files.associations": {
    "*rc": "yaml",
    ".npmrc": "properties",
    ".prettierrc": "json",
    "yarn.lock": "yaml",
    ".eslintrc": "jsonc"
  },
  "files.watcherExclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/build": true,
    "**/coverage": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/build": true,
    "**/coverage": true
  },
  "typescript.suggest.completeJSDocs": true,
  "tslint.enable": false,
  "eslint.enable": true,
  "eslint.packageManager": "yarn",
  "eslint.alwaysShowStatus": true,
  "eslint.run": "onSave",
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "typescript",
      "autoFix": true,
      "autoFixOnSave": true
    },
    {
      "language": "typescriptreact",
      "autoFix": true,
      "autoFixOnSave": true
    }
  ]
}
